	public static void genenerarExpReg(Nodo r) {
		
		if(r!=null) {
			
			
			if(r.getValor()=="|" && p_a==false) {
				expReg+="(";
				cerrar=r.getprimero();
				p_a=true;
			}
			
			
			
			
			genenerarExpReg(r.getHizq());
			
			if(r.getValor().equals("\".\"")) {
				expReg+="°";
			}
			expReg+=r.getValor();
			
			
			
			
			genenerarExpReg(r.hder);
			
			 if(r.getValor()=="|" && p_a==true && r.getprimero()==cerrar) {
					expReg+=")";
					p_a=false;
					cerrar="";
				}
			
		}
	}
	    
